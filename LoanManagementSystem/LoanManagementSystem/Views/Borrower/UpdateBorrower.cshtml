@model LoanManagementSystem.Models.Borrower

@{
    ViewData["Title"] = "Update Borrower";
}

<h2>Update Borrower</h2>

<form asp-action="UpdateBorrowerToDatabase" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="BorrowerID" />
    
    <button type="submit" class="btn btn-primary">Update Borrower</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to Borrowers</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}