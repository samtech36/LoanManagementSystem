@model LoanManagementSystem.Models.Payment

<h2>Create a New Payment</h2>

@using (Html.BeginForm("InsertPaymentToDatabase", "Payment", "Post"))
{
    <label asp-for="LoanID" class="control-label">Loan ID</label>
    <input type="text" name="LoanID" class="form-control" />

    <label asp-for="PaymentAmount" class="control-label">Payment Amount</label>
    <input type="number" step="0.01" name="PaymentAmount" class="form-control" />

    <label asp-for="PaymentDate" class="control-label">Payment Date</label>
    <input type="date" name="PaymentDate" class="form-control" />

    <label asp-for="PaymentMethod" class="control-label">Payment Method</label>
    <input type="text" name="PaymentMethod" class="form-control" />

    <input type="submit" value="Create Payment" class="btn btn-primary" />
}