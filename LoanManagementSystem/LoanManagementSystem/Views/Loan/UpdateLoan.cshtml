@model LoanManagementSystem.Models.Loan

<h2>Update Loan @Model.LoanID</h2>

@using (Html.BeginForm("UpdateLoanToDatabase", "Loan", FormMethod.Post))
{
    <input asp-for="LoanID" type="hidden" value="@Model.LoanID" />

    <label asp-for="BorrowerID" class="control-label">Borrower ID</label>
    <input type="text" name="BorrowerID" class="form-control" value="@Model.BorrowerID" />

    <label asp-for="LoanAmount" class="control-label">Loan Amount</label>    
    <input type="number" step="0.01" name="LoanAmount" class="form-control" value="@Model.LoanAmount" />

    <label asp-for="InterestRate" class="control-label">Interest Rate</label>    
    <input type="number" step="0.01" name="InterestRate" class="form-control" value="@Model.InterestRate" />

    <label asp-for="LoanTermInMonths" class="control-label">Loan Term In Months</label>    
    <input type="number" name="LoanTermInMonths" class="form-control" value="@Model.LoanTermInMonths" />

    <label asp-for="StartDate" class="control-label">Start Date</label>
    <input type="date" name="StartDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" />

    <label asp-for="EndDate" class="control-label">End Date</label>
    <input type="date" name="EndDate" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")" />

    <label asp-for="Status" class="control-label">Status</label>
    <input type="text" name="Status" class="form-control" value="@Model.Status" />
    
    <label asp-for="LoanType" class="control-label">Loan Type</label> 
    <input type="text" name="LoanType" class="form-control" value="@Model.LoanType" />

    <input type="submit" value="Update Loan" class="btn btn-primary" />
}